{
    "name": "ec-europa/itopapi",
    "description": "Php library for accessing the iTop API",
    "type": "library",
    "keywords": ["itop","api","client"],
    "license": "EUPL",
    "homepage": "https://github.com/ec-europa/iTopApi",
    "authors": [
        {
            "name": "Gregory Boddin",
            "email": "gregory.boddin@ext.ec.europa.eu",
            "homepage": "https://github.com/gboddin"
        }
    ],
    "autoload": {
      "psr-4": {"iTopApi\\": "src/"}
    },
    "require": {
      "ext-curl" : "*",
      "php" : ">=5.6.0"
    },
    "require-dev": {
      "phpunit/phpunit": "5.0.*",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts" : {
        "phpunit": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --standard=PSR1 src"
    }
}
